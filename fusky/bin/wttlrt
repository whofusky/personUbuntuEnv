versionNo="software version number: v0.0.0.1"

tDir="/home/fusky/DoChat/WeChat Files/tt"

if [ ! -d "${tDir}" ];then
    echo -e "\n\tERROR: dir [ ${tDir} ] not exist!\n"
    exit 1
fi

cd "${tDir}"
if [ $# -gt 0 ];then
    inPar="$1"
    ls -lrt ${inPar}*
else
    ls -lrt
fi

exit 0

